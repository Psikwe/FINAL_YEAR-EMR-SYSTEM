<!DOCTYPE html>
<html lang="en">
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!--Import Font Awesome-->
    <!--Let browser know website is optimized for mobile-->
    <link rel="stylesheet" href="/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>ATU EMR</title>
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="./index.html" class="brand-logo"><img width="175" src="./images/atu logo.png" alt=""></a>
            <ul class="right hide-on-med-and-down">
                
            </ul>
        </div>
    </nav>
    <section class="main">
        <div class="row">
            <div class="col s6">
                <h4 class="yellow-text">Personal Information</h4>
            </div>
            <div class="col s6">
                <h4 class="yellow-text center-align">Contact Information</h4>
            </div>
        </div>
        <form action="">
            <div class="row">
                <div class="col s4">
                    <div class="input-field">
                        <input type="text" id="PID">
                        <label for="PID">Old Patient ID</label>
                    </div>
                </div>
                <div class="offset-s3 col s2">
                    <div class="input-field">
                        <input type="tel" id="tel" >
                        <label for="number">Phone Number</label>
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <input type="text" id="dept">
                        <label for="dept">Department</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s4">
                    <div class="input-field">
                        <select>
                            <option value=""  selected disabled>Title</option>
                            <option value="1">Mr.</option>
                            <option value="2">Mrs.</option>
                            <option value="3">Dr.</option>
                            <option value="2">Prof.</option>
                        </select>
                        <label for="">Title</label>
                    </div>
                </div>
                <div class="offset-s3 col s2">
                    <div class="input-field">
                        <label for="">Select Date</label>
                        <input type="text" class= "datepicker" id="date">
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <input type="text" id="ID">
                        <label for="ID">Index No.</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s2">
                    <div class="input-field">
                        <input type="text" id="text">
                        <label for="fname">First Name</label>
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <input type="email" id="email">
                        <label for="lname">Last Name</label>
                    </div>
                </div>
                <div class="col s8">
                    <h4 class="yellow-text center-align">Patient Vitals</h4>                                                                                                                                               </h4>
                </div>
            </div>
            <div class="row">
                <div class="col s2">
                    <div class="input-field">
                        <input type="number" id="text">
                        <label for="mname">Programme level</label>
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <input type="number" id="age">
                        <label for="age">Age</label>
                    </div>
                </div>
                <div class="offset-s3 col s2">
                    <div class="input-field">
                        <input type="number" id="temp">
                        <label for="number">Temperature ^C</label>
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <input type="number" id="weight">
                        <label for="weight">Weight (KG)</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s2">
                    <div class="input-field">
                        <select>
                            <option value=""  selected disabled>Gender</option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                            <option value="3">Transgender</option>
                        </select>
                        <label for="">Gender</label>
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <select>
                            <option value=""  selected disabled>Nationality</option>
                            <option value="1">Ghahaian</option>
                            <option value="2">...</option>
                            <option value="2">...</option>
                        </select>
                        <label for="">Nationality</label>
                    </div>
                </div>
                <div class="offset-s3 col s2">
                    <div class="input-field">
                        <input type="number" id="BP">
                        <label for="BP">Blood Pressure</label>
                    </div>
                </div>
                <div class="col s2">
                    <div class="input-field">
                        <input type="number" id="Height">
                        <label for="Height">Height</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                            <a href="./doctor.html" class="btn waves-effect waves-light">
                            <i class="material-icons right">arrow_downward</i>Save
                            </a>
                </div>
            </div>
        </form>
    </section>

    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!--Jquery at end of body for optimized loading-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        //input-field
        document.addEventListener('DOMContentLoaded', function() {
            var sel = document.querySelectorAll('select');
            M.FormSelect.init(sel)
        });
        //dropdown-effect
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.dropdown-content');
            var instances = M.Dropdown.init(elems, options);
            });
        //datepicker
        const Calender = document.querySelector('.datepicker');
        M.Datepicker.init(Calender,{
            format:'dd-mm-yyyy',
            showClearBtn:true,

        });
    </script>
</body>
</html>